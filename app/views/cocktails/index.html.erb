<div class="container">
  <div class="header_card">
    <h1>Cocktail List</h1>
  </div>
</div>
<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="card">
          <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      </div>
    </div>
  <% end %>
  </div>
  <h3><%= link_to "Create new cocktail", new_cocktail_path %></h3>
</div>
